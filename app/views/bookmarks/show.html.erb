<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @bookmark %>

    <%= link_to "Back to bookmarks", bookmarks_path, class: "ml-2 mt-2 rounded-lg py-3 px-5 bg-blue-500 inline-block font-medium text-white hover:bg-blue-600" %>
    <%= link_to "Edit this bookmark", edit_bookmark_path(@bookmark), class: "rounded-lg py-3 ml-2 px-5 bg-orange-500 inline-block font-medium text-white hover:bg-orange-600" %>

    <div class="inline-block ml-2">
      <%= button_to "Destroy this bookmark", bookmark_path(@bookmark), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-red-500 text-white font-medium hover:bg-red-600" %>
    </div>
  </div>
</div>
