<%= turbo_frame_tag bookmark do %>
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= bookmark.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Url:</strong>
    <%= bookmark.url %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= bookmark.description %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this bookmark", bookmark, data: {turbo_frame: "_top"}, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this bookmark", edit_bookmark_path(bookmark), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
<% end %>
