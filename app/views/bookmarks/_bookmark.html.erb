<%= turbo_frame_tag bookmark do %>
  <div class="mb-2 mt-2 pb-2 bg-green-100 border border-gray-200 rounded-lg shadow">

    <a href="<%= bookmark.url %>" target="_blank">
      <h2 class="text-3xl bg-green-400 text-white w-auto	p-2 rounded-t-lg">
        <%= bookmark.title.humanize %>
      </h2>
    </a>

    <p class="my-1 p-2">
      <a href="<%= bookmark.url %>" class="underline text-3xl" target="_blank"><%= bookmark.url %></a>
    </p>

    <p class="my-1 p-2">
      <strong class="block font-medium mb-1">Description:</strong>
      <%= bookmark.description %>
    </p>

    <p class="my-1 p-2">
      <% if bookmark.tags.any? %>
        <% bookmark.tags.each do |tag| %>
          <%= link_to tag.name, bookmarks_path(tag: tag.name, filter: params[:filter]), data: { turbo_frame: "_top" }, class: "tag bg-blue-200 text-blue-800 rounded-full px-3 py-1 text-sm ml-2" %>
        <% end %>
      <% end %>
    </p>

    <% if action_name != "show" %>
      <div class="p-2 ">
        <%= link_to "Show this bookmark", bookmark, data: {turbo_frame: "_top"}, class: "rounded-lg py-3 px-5 bg-blue-500 inline-block font-medium text-white hover:bg-blue-600" %>
        <%= link_to "Edit this bookmark", edit_bookmark_path(bookmark), class: "rounded-lg py-3 ml-2 px-5 bg-orange-500 inline-block font-medium text-white hover:bg-orange-600" %>
      </div>  
    <% end %>
  </div>
<% end %>
