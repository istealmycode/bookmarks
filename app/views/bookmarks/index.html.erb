<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <% if action_name == "index_by_tag" %>
      <h1 class="font-bold text-4xl">Bookmarks tagged <%= params[:tag] %></h1>
    <% else %>
      <h1 class="font-bold text-4xl">Bookmarks</h1>
    <% end %>
    <% if action_name == "index_by_tag" %>
          <%= link_to "All bookmarks", bookmarks_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %> 

    <% else %>
      <%= link_to "New bookmark", new_bookmark_path, data: {turbo_frame: "new_bookmark"}, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %> 
    <% end %>
  </div>

  <%= turbo_frame_tag "new_bookmark" do %>
  <% end %>

  <div id="bookmarks" class="min-w-full">
    <%= render @bookmarks %>
  </div>
</div>
