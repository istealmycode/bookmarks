<%= turbo_frame_tag @bookmark do %>
    <%= render "form", bookmark: @bookmark %>

    <%= link_to "Show this bookmark", @bookmark, data: {turbo_frame: "_top"}, class: "ml-2 mt-2 rounded-lg py-3 px-5 bg-blue-500 inline-block font-medium text-white hover:bg-blue-600" %>
    <%= link_to "Back to bookmarks", bookmarks_path, data: {turbo_frame: "_top"}, class: "ml-2 mt-2 rounded-lg py-3 px-5 bg-blue-500 inline-block font-medium text-white hover:bg-blue-600" %>
<% end %>
