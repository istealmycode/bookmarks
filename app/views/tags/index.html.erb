<div class="mx-auto md:w-2/3 w-full">
  <h1 class="text-3xl font-semibold mb-4">All Tags for <%= current_user.email %></h1>

  <ul class="list-disc pl-6">
    <% @tags.each do |tag| %>
      <li class="mb-4">
        <h2 class="text-xl font-medium mb-2"><%= tag.name %></h2>

        <ul class="list-disc pl-6">
          <% tag.bookmarks.each do |bookmark| %>
            <li class="mb-2">
              <strong><%= bookmark.title %></strong> - <%= link_to truncate(bookmark.url, length: 30), bookmark, title: bookmark.url %>
            </li>
          <% end %>
        </ul>
      </li>
    <% end %>
  </ul>
</div>
